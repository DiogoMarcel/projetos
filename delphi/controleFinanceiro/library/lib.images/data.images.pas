implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

var
  FDataImagens: IDataImagens;

{ TdataImages }

class function TdataImages.ObterInstanciaDataImagens: IDataImagens;
begin
  if (not Assigned(FDataImagens)) then
    FDataImagens := Self.Create(Application);

  Result := FDataImagens;
end;

function TdataImages.PegarImageList(_AQualImgList: EQualImgList): TImageList;
begin
  case _AQualImgList of
    qil16: Result := il16;
    qil24: Result := il24;
    qil32: Result := il32;
    qil40: Result := il40;
    else
      raise Exception.Create('Pegar Image List não informado corretamente!');
  end;
end;

function TdataImages.PegarImageList(_AQualImgList: EQualImgListVirtual): TVirtualImageList;
begin
  case _AQualImgList of
    qiv54: Result := vil54;
    else
      raise Exception.Create('Pegar Image List Virtual não informado corretamente!');
  end;
end;

function TdataImages.PegarImagem24(_AButton: TSpeedButton;
                                   _AImgEnabled: TConstImagens24;
                                   _AImgDisabled: TConstImagens24 = ci24nil): IDataImagens;
begin
  Result := Self;

  _AButton.Images             := PegarImageList(qil24);
  _AButton.ImageIndex         := TEnumImagens24.EnumToValue(_AImgEnabled);
  _AButton.DisabledImageIndex := TEnumImagens24.EnumToValue(_AImgDisabled);
end;

function TdataImages.PegarImagem32(_AButton: TSpeedButton;
                                   _AImgEnabled: TConstImagens32;
                                   _AImgDisabled: TConstImagens32 = ci32nil): IDataImagens;
begin
  Result := Self;

  _AButton.Images             := PegarImageList(qil32);
  _AButton.ImageIndex         := TEnumImagens32.EnumToValue(_AImgEnabled);
  _AButton.DisabledImageIndex := TEnumImagens32.EnumToValue(_AImgDisabled);
end;

function TdataImages.PegarImagem40(_AButton: TSpeedButton;
                                   _AImgEnabled: TConstImagens40;
                                   _AImgDisabled: TConstImagens40 = ci40nil): IDataImagens;
begin
  Result := Self;

  _AButton.Images             := PegarImageList(qil40);
  _AButton.ImageIndex         := TEnumImagens40.EnumToValue(_AImgEnabled);
  _AButton.DisabledImageIndex := TEnumImagens40.EnumToValue(_AImgDisabled);
end;

function TdataImages.PegarNomesListas(_AQualImgList: EQualImgListVirtual): string;
begin
  case _AQualImgList of
    qiv54: Result := 'ci54Logo';
  end;
end;

function TdataImages.PegarNomesListas(_AQualImgList: EQualImgList): string;
begin
  case _AQualImgList of
    qil16: Result := 'il16';
    qil24: Result := 'il24';
    qil32: Result := 'il32';
    qil40: Result := 'il40';
  end;
end;

